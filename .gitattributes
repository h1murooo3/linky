# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Config files
*.ini text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Exclude from git LFS (if used)
*.py filter=lfs diff=lfs merge=lfs -text
*.js filter=lfs diff=lfs merge=lfs -text

